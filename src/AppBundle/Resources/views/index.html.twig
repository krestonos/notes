{% extends 'base.html.twig' %}

{% block body %}
    <a class="btn btn-success" href="{{ path('createNote') }}">Add new note</a>
    <table class="table table-hover">
        <tr>
            <th>ID</th>
            <th>Note</th>
            <th></th>
        </tr>
        {% for note in notes %}
            <tr>
                <td>{{ note.getId }}</td>
                <td>
                    {{ note.text }}
                </td>
                <td>
                    <a class="btn btn-default" href="{{ path('showNote', {'id': note.getId}) }}">View Note</a>
                    <a class="btn btn-danger" href="{{ path('deleteNote', {'id': note.getId}) }}">Delete</a>
                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
